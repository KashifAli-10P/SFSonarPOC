<apex:page controller="createNewEmployee">
    <apex:form >
    <apex:pageBlock title="Create New Employee">
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!employee.Name}" />
            <apex:inputField value="{!employee.Email__c}" />
            <apex:inputField value="{!employee.Phone__c}" />
            <apex:inputField value="{!employee.Address__c}" />
            <apex:inputField value="{!employee.Title__c}" />
        </apex:pageBlockSection>
        	<apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
        	</apex:pageBlockButtons>
    </apex:pageBlock>
    </apex:form>    
</apex:page>